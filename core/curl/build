#!/bin/sh -e

cpt-configure \
    --enable-ipv6 \
    --enable-unix-sockets \
    --enable-hidden-symbols \
    --without-libidn \
    --without-libidn2 \
    --disable-manual \
    --disable-ldap \
    --disable-ares \
    --without-libidn \
    --without-librtmp \
    --without-icu \
    --without-libpsl \
    --without-zstd \
    --with-pic \
    --with-bearssl \
    --with-ca-bundle=/etc/certificates/cert.pem \
    --without-ssl

make curl_LDFLAGS=-all-static
make DESTDIR="$1" install
